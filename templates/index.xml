<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="index">
    <t t-call="website.layout">
      <t t-set="title">Stock</t>
      <div class="oe_structure">
        <div class="container">

          <h3>Stock</h3>

          <table
            class="table table-bordered"
            style="table-layout: fixed"
          >
            <thead style="display: table-row-group">
              <tr>
                <th
                  class="text-center"
                  scope="col"
                >code</th>
                <th
                  class="text-center"
                  scope="col"
                >name</th>
                <th
                  class="text-center"
                  scope="col"
                >ISIN</th>
                <th
                  class="text-center"
                  scope="col"
                >start</th>
                <th
                  class="text-center"
                  scope="col"
                >market</th>
                <th
                  class="text-center"
                  scope="col"
                >group</th>
                <th
                  class="text-center"
                  scope="col"
                >CFI</th>
              </tr>
            </thead>
            <tbody>

              <tr>
                <td><span t-esc="stock_detail.code" /></td>
                <td><span t-esc="stock_detail.name" /></td>
                <td><span t-esc="stock_detail.ISIN" /></td>
                <td><span t-esc="stock_detail.start" /></td>
                <td><span t-esc="stock_detail.market" /></td>
                <td><span t-esc="stock_detail.group" /></td>
                <td><span t-esc="stock_detail.CFI" /></td>
              </tr>

            </tbody>
          </table>

          <hr />

        </div>
      </div>
    </t>
  </template>

</odoo>
