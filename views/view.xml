<?xml version="1.0"?>
<odoo>

  <!-- Stock -->
  <record id="form_stock" model="ir.ui.view">
    <field name="name">股票基本資訊</field>
    <field name="model">stock</field>
    <field name="arch" type="xml">
      <form string="股票基本資訊">
        <sheet>
          <group>
            <field name="type" />
            <field name="code" />
            <field name="name" />
            <field name="ISIN" />
            <field name="start" />
            <field name="market" />
            <field name="group" />
            <field name="CFI" />
          </group>
          <notebook>
            <page string="歷史資訊">
              <field name="storage_ids" />
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="tree_stock" model="ir.ui.view">
    <field name="name">股票基本資訊</field>
    <field name="model">stock</field>
    <field name="arch" type="xml">
      <tree>
        <field name="type" />
        <field name="code" />
        <field name="name" />
        <field name="ISIN" />
        <field name="start" />
        <field name="market" />
        <field name="group" />
        <field name="CFI" />
      </tree>
    </field>
  </record>

  <record id="view_filter_stocks" model="ir.ui.view">
    <field name="name">Filter Stocks</field>
    <field name="model">stock</field>
    <field name="arch" type="xml">
      <search string="Filter Stock">
        <field name="name" string="股名" />
        <field name="code" string="代號" />
        <field name="market" string="市場" />
        <field name="group" string="產業類型" />

        <group expand="0" string="Group By">
          <filter string="市場" name="name" domain="[]" context="{'group_by': 'market'}" />
          <filter string="產業類型" name="group" domain="[]" context="{'group_by': 'group'}" />
        </group>
      </search>
    </field>
  </record>

  <!-- Stock storage -->
  <record id="form_stock_storage" model="ir.ui.view">
    <field name="name">股票歷史資訊</field>
    <field name="model">stock.storage</field>
    <field name="arch" type="xml">
      <form string="股票歷史資訊">
        <sheet>
          <group>
            <field name="stock_id" widget="many2onebutton" />
            <field name="date" />
            <field name="capacity" />
            <field name="turnover" />
            <field name="open" />
            <field name="high" />
            <field name="low" />
            <field name="close" />
            <field name="change" />
            <field name="transaction" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="tree_stock_storage" model="ir.ui.view">
    <field name="name">股票歷史資訊</field>
    <field name="model">stock.storage</field>
    <field name="arch" type="xml">
      <tree>
        <field name="stock_id" widget="many2onebutton" />
        <field name="date" />
        <field name="capacity" />
        <field name="turnover" />
        <field name="open" />
        <field name="high" />
        <field name="low" />
        <field name="close" />
        <field name="change" />
        <field name="transaction" />
      </tree>
    </field>
  </record>


</odoo>
